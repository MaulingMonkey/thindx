c       = "run --manifest-path=xtask/Cargo.toml -p xtask -- check"
d       = "run --manifest-path=xtask/Cargo.toml -p xtask -- doc"
h       = "run --manifest-path=xtask/Cargo.toml -p xtask -- help"
vsc     = "run --manifest-path=xtask/Cargo.toml -p xtask -- vsc"
